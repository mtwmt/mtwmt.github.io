{
  "name": "website",
  "version": "2.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "postinstall": "npm link builders && npm run build:builders",
    "prerender": "ng run website:prerender",
    "prerender:pages": "ng run website:prerender:static --routes-file pages.txt",
    "dev:ssr": "ng run website:serve-ssr",
    "serve:ssr": "node dist/website/server/main.js",
    "serve:assets": "ng run website:static-server --path ./src --port 4201",
    "build:builders": "cd builders && npm run build",
    "build:blog-posts-json": "ng run website:generate-posts-json",
    "build:urls": "ng run website:generate-prerender-urls",
    "build:rss": "ng run website:generate-rss",
    "build:ssr": "ng build && ng run website:server",
    "build:minify-html": "ng run website:minify-rendered-files",
    "build:website": "npm run build:blog-posts-json && npm run build:urls && npm run prerender:pages && npm run build:minify-html && npm run build:rss -- --rss-path ./dist/website/browser/sitemap.xml",
    "build:deploy": "npx concurrently \"npm run serve:assets\" \"npm run build:website\" --kill-others"
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/architect": "^0.1502.2",
    "@angular-devkit/core": "^15.2.2",
    "@angular/animations": "^15.2.2",
    "@angular/cdk": "^15.2.2",
    "@angular/common": "^15.2.2",
    "@angular/compiler": "^15.2.2",
    "@angular/core": "^15.2.2",
    "@angular/forms": "^15.2.2",
    "@angular/platform-browser": "^15.2.2",
    "@angular/platform-browser-dynamic": "^15.2.2",
    "@angular/platform-server": "^15.2.2",
    "@angular/router": "^15.2.2",
    "@angular/service-worker": "^15.2.2",
    "@fortawesome/angular-fontawesome": "^0.11.1",
    "@fortawesome/fontawesome-svg-core": "^6.2.0",
    "@fortawesome/free-brands-svg-icons": "^6.2.0",
    "@fortawesome/free-regular-svg-icons": "^6.2.0",
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
    "@nguniversal/express-engine": "^15.2.0",
    "@types/html-minifier": "^4.0.2",
    "express": "^4.18.1",
    "feed": "^4.2.2",
    "html-minifier": "^4.0.0",
    "js-yaml": "^4.1.0",
    "markdown-it": "^13.0.1",
    "rxjs": "^7.5.6",
    "tslib": "^2.4.0",
    "zone.js": "^0.11.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.2",
    "@angular/cli": "^15.2.2",
    "@angular/compiler-cli": "^15.2.2",
    "@nguniversal/builders": "^15.2.0",
    "@types/express": "^4.17.14",
    "@types/jasmine": "^4.3.0",
    "@types/js-yaml": "^4.0.5",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.7.18",
    "@types/prismjs": "^1.26.0",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.4.0",
    "jasmine-core": "^4.4.0",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage": "^2.2.0",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "prismjs": "^1.29.0",
    "tailwindcss": "^3.1.8",
    "typescript": "~4.9.5"
  }
}
