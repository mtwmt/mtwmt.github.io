---
import Header from "../components/Header.astro";
import { SITE_TITLE } from "../consts";
import AsideLayout from "../layouts/AsideLayout.astro";
import ContentLayout from "../layouts/ContentLayout.astro";
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";
import Input from "../components/Input.astro";
import Button from "../components/Button.astro";
import PageTitle from "../components/PageTitle.astro";
import Divider from "../components/Divider.astro";
---

<MainLayout title={`聯絡我 - ${SITE_TITLE}`}>
  <Header />

  <ContentLayout>
    <PageTitle
      title="與我聯絡"
      subtitle="如果您有任何想法或外包合作的意向，非常歡迎與我聯絡：）"
      icon="ic:outline-mail"
    />

    <Divider variant="solid" spacing="sm" />

    <div class="py-10 px-[4vw]">
      <Card className="max-w-3xl mx-auto">
        <div class="mb-6">
          <h2 class="text-xl font-bold text-default mb-2">📝 填寫聯絡表單</h2>
          <p class="text-sm text-light">
            請填寫以下資訊，我會盡快回覆您！帶有 <span class="text-red-500"
              >*</span
            > 的欄位為必填。
          </p>
        </div>

        <form id="form" class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <Input
              type="text"
              name="name"
              label="姓名"
              placeholder="請輸入您的姓名"
              required
            />
            <Input
              type="tel"
              name="tel"
              label="電話"
              placeholder="0912-345-678"
            />
          </div>

          <div class="grid md:grid-cols-2 gap-6">
            <Input
              type="email"
              name="email"
              label="電子信箱"
              placeholder="your@email.com"
              required
            />
            <Input
              type="text"
              name="line"
              label="LINE ID"
              placeholder="請輸入您的 LINE ID"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-default mb-2">
              訊息內容 <span class="text-red-500 ml-1">*</span>
            </label>
            <textarea
              name="message"
              rows="6"
              placeholder="想跟 Mandy 說些什麼？例如：專案需求、合作提案、技術諮詢等..."
              class="w-full rounded-md border-2 border-gray-900 dark:border-gray-200 px-4 py-2 text-base transition-all duration-200 comic-shadow-sm bg-white dark:bg-gray-900 focus:outline-none focus:border-primary-600 dark:focus:border-primary-400 focus:ring-2 focus:ring-primary-500/50 dark:focus:ring-primary-400/50 focus:shadow-[3px_3px_0_rgba(0,170,170,0.2)] resize-none"
              required></textarea>
          </div>

          <div id="alert-container"></div>

          <div class="flex justify-end gap-3">
            <Button type="submit" variant="primary" size="md">
              送出訊息
            </Button>
          </div>
        </form>
      </Card>
    </div>

    <AsideLayout slot="aside" />
  </ContentLayout>
</MainLayout>

<script>
  const form = document.getElementById("form") as HTMLFormElement;
  const alertContainer = document.getElementById(
    "alert-container",
  ) as HTMLDivElement;

  function showAlert(type: "success" | "error", message: string) {
    const colorConfig = {
      success: {
        container:
          "bg-green-50 border-green-200 dark:bg-green-900/20 dark:border-green-800",
        icon: "text-green-600 dark:text-green-400",
        text: "text-green-800 dark:text-green-400",
      },
      error: {
        container:
          "bg-red-50 border-red-200 dark:bg-red-900/20 dark:border-red-800",
        icon: "text-red-600 dark:text-red-400",
        text: "text-red-800 dark:text-red-400",
      },
    };

    const config = colorConfig[type];

    alertContainer.innerHTML = `
      <div class="relative p-4 rounded-md border-2 comic-shadow ${config.container}" role="alert">
        <div class="flex gap-3">
          <svg class="w-6 h-6 flex-shrink-0 ${config.icon}" viewBox="0 0 24 24">
            ${
              type === "success"
                ? '<path fill="currentColor" d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10s10-4.5 10-10S17.5 2 12 2m-2 15l-5-5l1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>'
                : '<path fill="currentColor" d="M11 15h2v2h-2zm0-8h2v6h-2zm1-5C6.47 2 2 6.5 2 12s4.47 10 10 10s10-4.5 10-10S17.53 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8s8 3.58 8 8s-3.58 8-8 8z"/>'
            }
          </svg>
          <div class="flex-1 min-w-0">
            <div class="text-sm leading-relaxed ${config.text}">
              ${message}
            </div>
          </div>
          <button
            type="button"
            class="flex-shrink-0 ${config.icon} hover:opacity-70 transition-opacity"
            aria-label="關閉"
            onclick="this.closest('[role=alert]').remove()"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24">
              <path fill="currentColor" d="M19 6.41L17.59 5L12 10.59L6.41 5L5 6.41L10.59 12L5 17.59L6.41 19L12 13.41L17.59 19L19 17.59L13.41 12z"/>
            </svg>
          </button>
        </div>
      </div>
    `;

    // 5 秒後自動隱藏
    setTimeout(() => {
      alertContainer.innerHTML = "";
    }, 5000);
  }

  form.addEventListener("submit", async (event) => {
    event.preventDefault();

    const submitButton = form.querySelector(
      'button[type="submit"]',
    ) as HTMLButtonElement;
    const originalText = submitButton.textContent;

    // 顯示載入狀態
    submitButton.disabled = true;
    submitButton.textContent = "傳送中...";

    try {
      const formData = new FormData(form);
      const scriptID =
        "AKfycbz411s_MI3t6B2-4fKV5O139Me4cFEIa0PCDV0SlRD_XPYfhepA3P9J3c4KDoVJElgA";
      const apiUrl = `https://script.google.com/macros/s/${scriptID}/exec`;

      await fetch(apiUrl, {
        method: "POST",
        body: formData,
      });

      showAlert("success", "您的想法 Mandy 已經收到囉！我會盡快回覆您：）");
      form.reset();
    } catch (error) {
      console.error("發送請求時出現錯誤：", error);
      showAlert("error", "傳送失敗，請稍後再試或透過其他方式聯繫我。");
    } finally {
      // 恢復按鈕狀態
      submitButton.disabled = false;
      submitButton.textContent = originalText;
    }
  });
</script>
