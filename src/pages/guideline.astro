          <div class="grid grid-cols-3 gap-4 mb-6">
            <!-- 使用 CSS 變數 var(--color-accent-*) -->
            <div>
              <div
                class="relative h-24 rounded-xl shadow-md flex items-end justify-center pb-4"
                style="background-color: var(--color-accent-light)"
              >
                <div class="text-white font-bold">Light</div>
              </div>
              <p class="text-xs text-light mt-2 text-center">--color-accent-light</p>
