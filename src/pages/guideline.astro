  { depth: 2, slug: 'grid', text: '📱 響應式網格' },
  { depth: 2, slug: 'tags', text: '🏷️ Tag vs Badge 標籤系統' },
  { depth: 2, slug: 'input', text: '📝 Input 表單組件' },
  { depth: 2, slug: 'alert', text: '💬 Alert 提示組件' },
  { depth: 2, slug: 'hero', text: '🎭 Hero 區塊組件' },
  { depth: 2, slug: 'divider', text: '➖ Divider 分隔線組件' },
  { depth: 2, slug: 'tooltip', text: '💭 Tooltip 提示框組件' },
  { depth: 2, slug: 'loading', text: '⏳ Loading 載入組件' },
  { depth: 2, slug: 'dropdown', text: '📋 Dropdown 下拉選單組件' },
  { depth: 2, slug: 'modal', text: '🪟 Modal 彈窗組件' },
  { depth: 2, slug: 'timeline', text: '📅 Timeline 時間軸組件' },
