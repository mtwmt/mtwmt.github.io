  { depth: 2, slug: 'colors', text: '🎨 色彩系統' },
  { depth: 2, slug: 'comic-style', text: '🎨 Comic 風格樣式系統' },
  { depth: 2, slug: 'buttons', text: '🔘 按鈕系統' },
  { depth: 2, slug: 'cards', text: '🎴 卡片系統' },
