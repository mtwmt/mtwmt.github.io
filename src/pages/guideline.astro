                  <p class="text-xs text-light mt-1">700</p>
                </div>
                <div class="text-center">
                  <div class="h-16 bg-error-800 rounded-lg"></div>
                  <p class="text-xs text-light mt-1">800</p>
                </div>
                <div class="text-center">
                  <div class="h-16 bg-error-900 rounded-lg"></div>
                  <p class="text-xs text-light mt-1">900</p>
                </div>
                <div class="text-center">
                  <div class="h-16 bg-error-950 rounded-lg"></div>
                  <p class="text-xs text-light mt-1">950</p>
                </div>
              </div>
              <div class="flex gap-2">
                <Badge color="error">錯誤</Badge>
                <Badge color="error" outline={true}>失敗</Badge>
              </div>
            </div>

            <!-- Info -->
            <div>
              <h4 class="text-xl font-bold mb-3 text-info-700 dark:text-info-400">Info (資訊/藍色)</h4>
              <div class="grid grid-cols-5 md:grid-cols-11 gap-2 mb-4">
                <div class="text-center">
                  <div class="h-16 bg-info-50 rounded-lg border border-gray-200"></div>
                  <p class="text-xs text-light mt-1">50</p>
                </div>
                <div class="text-center">
                  <div class="h-16 bg-info-100 rounded-lg"></div>
                  <p class="text-xs text-light mt-1">100</p>
                </div>
                <div class="text-center">
                  <div class="h-16 bg-info-200 rounded-lg"></div>
                  <p class="text-xs text-light mt-1">200</p>
                </div>
                <div class="text-center">
                  <div class="h-16 bg-info-300 rounded-lg"></div>
                  <p class="text-xs text-light mt-1">300</p>
                </div>
                <div class="text-center">
                  <div class="h-16 bg-info-400 rounded-lg"></div>
                  <p class="text-xs text-light mt-1">400</p>
                </div>
                <div class="text-center md:col-span-1 col-span-5">
                  <div class="h-16 bg-info-500 rounded-lg ring-2 ring-info-600 flex items-center justify-center">
                    <span class="text-white font-bold text-sm">ⓘ 500</span>
                  </div>
                  <p class="text-xs font-bold text-info-600 mt-1">主色</p>
                </div>
                <div class="text-center">
                  <div class="h-16 bg-info-600 rounded-lg"></div>
