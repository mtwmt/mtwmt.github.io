---
export interface Props {
  color?: 'primary' | 'accent' | 'success' | 'warning' | 'error' | 'info' | 'neutral';
  size?: 'sm' | 'md' | 'lg';
  outline?: boolean;
  className?: string;
  href?: string;
}

const {
  color = 'primary',
  size = 'md',
  outline = false,
  className = '',
  href,
} = Astro.props;

const sizeClasses = {
  sm: 'px-2 py-0.5 text-[10px]',
  md: 'px-3 py-1 text-xs',
  lg: 'px-5 py-2 text-sm font-extrabold',
};

// Comic Book 風格：粗邊框 + 硬陰影
const colorClasses = {
  primary: outline
    ? 'border-2 border-primary-600 text-primary-700 dark:border-primary-400 dark:text-primary-300 bg-transparent'
    : 'bg-primary-100 text-primary-800 dark:bg-primary-900/50 dark:text-primary-200 border-2 border-primary-600 dark:border-primary-500',
  accent: outline
    ? 'border-2 border-orange-600 text-orange-700 dark:border-orange-400 dark:text-orange-300 bg-transparent'
    : 'bg-orange-100 text-orange-800 dark:bg-orange-900/50 dark:text-orange-200 border-2 border-orange-600 dark:border-orange-500',
  success: outline
    ? 'border-2 border-green-600 text-green-700 dark:border-green-400 dark:text-green-300 bg-transparent'
    : 'bg-green-100 text-green-800 dark:bg-green-900/50 dark:text-green-200 border-2 border-green-600 dark:border-green-500',
  warning: outline
    ? 'border-2 border-yellow-600 text-yellow-700 dark:border-yellow-400 dark:text-yellow-300 bg-transparent'
    : 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/50 dark:text-yellow-200 border-2 border-yellow-600 dark:border-yellow-500',
  error: outline
    ? 'border-2 border-red-600 text-red-700 dark:border-red-400 dark:text-red-300 bg-transparent'
    : 'bg-red-100 text-red-800 dark:bg-red-900/50 dark:text-red-200 border-2 border-red-600 dark:border-red-500',
  info: outline
    ? 'border-2 border-blue-600 text-blue-700 dark:border-blue-400 dark:text-blue-300 bg-transparent'
    : 'bg-blue-100 text-blue-800 dark:bg-blue-900/50 dark:text-blue-200 border-2 border-blue-600 dark:border-blue-500',
  neutral: outline
    ? 'border-2 border-gray-600 text-gray-700 dark:border-gray-400 dark:text-gray-300 bg-transparent'
    : 'bg-gray-200 text-gray-800 dark:bg-gray-700/50 dark:text-gray-200 border-2 border-gray-600 dark:border-gray-500',
};

// Comic Book 風格：圓角小 + 硬陰影偏移
const baseClasses = 'inline-block font-bold rounded whitespace-nowrap transition-all duration-200 shadow-[2px_2px_0_rgba(0,0,0,0.15)] dark:shadow-[2px_2px_0_rgba(255,255,255,0.15)] hover:shadow-[3px_3px_0_rgba(0,0,0,0.2)] dark:hover:shadow-[3px_3px_0_rgba(255,255,255,0.2)]';
const classes = `${baseClasses} ${sizeClasses[size]} ${colorClasses[color]} ${className}`.trim();
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <span class={classes}>
    <slot />
  </span>
)}
