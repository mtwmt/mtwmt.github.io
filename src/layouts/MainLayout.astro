---
import BaseHead from '../components/BaseHead.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
const { title = SITE_TITLE } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} />
  </head>
  <body class="bg-default text-default">
    <div
      class="relative mx-auto before:fixed before:right-0 before:top-0 before:block before:w-80 lg:before:h-screen before:bg-primary-900 before:transition lg:max-w-7xl lg:before:w-1/2"
    >
      <slot />
    </div>
  </body>
</html>
